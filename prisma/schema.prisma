generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JobSeeker {
  id        String      @id @default(cuid())
  firstName String
  lastName  String
  age       Int
  adress    String
  Languages Languages[]
}

model Languages {
  id        Int         @id @default(autoincrement())
  name      String
  JobSeeker JobSeeker[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
