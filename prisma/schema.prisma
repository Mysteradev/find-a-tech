// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Enterprise {
  id              String      @id @default(cuid())
  name            String      @unique
  location        String
  numberEmployees String
  description     String      @db.Text
  usedLanguage    Languages[] @relation(references: [id])
  offers Offer[]
}

model Offer {
  id           String      @id @default(cuid())
  title        String
  slug String
  description  String      @db.Text
  salary       String
  contractType String
  location     String
  createdAt    DateTime    @default(now())
  modifiedAt   DateTime    @updatedAt
  usedLanguage Languages[] @relation(references: [id])
  enterprise Enterprise?  @relation(fields: [enterpriseId], references: [id])
  enterpriseId String?

  @@map(name: "Offers")
}

model Languages {
  id          Int          @id @default(autoincrement())
  name        String
  enterprises Enterprise[] @relation(references: [id])
  jobOffers   Offer[]      @relation(references: [id])
}

enum Role {
  USER
  ADMIN
}
